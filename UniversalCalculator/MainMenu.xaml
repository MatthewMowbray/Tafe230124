<Page
    x:Class="Calculator.MainMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="Beige">
		<Image Source="abacus2.png" HorizontalAlignment="Left" VerticalAlignment="Top" Width="140" Height="100" Margin="10"/>
		<StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" >
			<TextBlock Text="Universal Calculator" FontSize="45" Margin="40"/>
			<Button  Content="Maths Calculator" FontSize="45" MinWidth="430" MinHeight="100" Margin="10" Click="Button_ClickMathsCalculator"/>
			<Button  Content="Morgage Calculator" FontSize="45" MinWidth="430" MinHeight="100" Margin="10" Click="Button_ClickMorgageCalculator"/>
			<Button  Content="Currency Converter" FontSize="45" MinWidth="430" MinHeight="100" Margin="10" Click="Button_ClickCurrencyConverter"/>
			<Button  Content="Exit" FontSize="45" MinWidth="430" MinHeight="100" Margin="10" Click="Button_ClickExit"/>


		</StackPanel>

    </Grid>
</Page>
