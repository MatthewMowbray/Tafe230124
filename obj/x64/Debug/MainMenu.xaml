<Page
    x:Class="Tafe_Universal_Calculator.MainMenu"
    xmlns:local="using:Tafe_Universal_Calculator"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="Beige">
        <Image Source="abacus2.png" HorizontalAlignment="Left" VerticalAlignment="Top" Width="140" Height="100" Margin="10"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" >
            <TextBlock Text="Universal Calculator" FontSize="45" Margin="40"/>
            <Button x:ConnectionId='2'  Content="Maths Calculator" FontSize="45" MinWidth="430" MinHeight="100" Margin="10"                                    />
            <Button x:ConnectionId='3'  Content="Morgage Calculator" FontSize="45" MinWidth="430" MinHeight="100" Margin="10"                                      />
            <Button x:ConnectionId='4'  Content="Currency Converter" FontSize="45" MinWidth="430" MinHeight="100" Margin="10"                                      />
            <Button x:ConnectionId='5'  Content="Trip Calculator" FontSize="45" MinWidth="430" MinHeight="100" Margin="10"                                 />
            <Button  Content="Exit" FontSize="45" MinWidth="430" MinHeight="100" Margin="10" />


        </StackPanel>

    </Grid>
</Page>

